<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.myproject.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/nail"
        android:background="#FFFFFF"/>

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:textSize="36sp"

        android:layout_marginTop="16dp"
        android:layout_marginLeft="38dp"
        android:text="Nail Designs"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="of Cincinnati"
        android:layout_centerHorizontal="true"
        android:paddingTop="8dp"
        android:textColor="#000000"
        android:textSize="22sp"
        android:layout_below="@id/name_text_view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="123 Park Avenue"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="38dp"
        android:layout_marginBottom="96dp"
        android:paddingTop="8dp"
       />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cincinnati,Ohio 45202"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textColor="#000000"
        android:layout_marginBottom="76dp"
        android:layout_marginLeft="36dp"
        android:layout_alignParentStart="true"
        android:paddingTop="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="(800)-222-111"
        android:textColor="#000000"
        android:layout_marginBottom="56dp"
        android:layout_marginLeft="38dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Business Hours: Monday - Saturday 9:00 am - 9:00 pm "
        android:textSize="12dp"
        android:textColor="#000000"
        android:layout_marginLeft="38dp"
        android:layout_marginBottom= "16dp" />

</RelativeLayout>
